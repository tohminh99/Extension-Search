{
    "manifest_version": 2,
    "name": "Search Entertainment",
    "version": "1.0",
    
    "description": "To Search Entertainment",
    "icons": {
        "48": "icon/subarashi.jpg"
    },

    "permissions": [
        "activeTab"
    ],

    "background":{
        "scripts": ["searching.js"],
        "page": "searching.html"
    },
    
    "browser_action": {
        "default_icon": "icon/subarashi.jpg",
        "default_title": "Entertainment Search",
        "default_popup": "searching.html"
    }
}